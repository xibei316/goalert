[
  {
    "Name": "Build-BE",
    "Command": [
      "make",
      "-s",
      "bin/goalert",
      "BUILD_TAGS=sql_highlight",
      "BUNDLE=1"
    ],
    "Restart": true,
    "Quiet": true,
    "IgnoreErrors": true
  },
  {
    "Name": "MailHog",
    "Command": [
      "go",
      "run",
      "github.com/mailhog/MailHog",
      "-ui-bind-addr=localhost:8025",
      "-api-bind-addr=localhost:8025",
      "-smtp-bind-addr=localhost:1025"
    ],
    "Restart": true,
    "IgnoreErrors": true
  },
  {
    "Name": "Backend",
    "Command": [
      "bin/goalert",
      "-l=localhost:3030",
      "--db-url=postgres://goalert:goalert@localhost:5432/goalert?sslmode=disable",
      "--listen-sysapi=localhost:1234",
      "--listen-prometheus=localhost:2112"
    ],
    "Restart": true,
    "IgnoreErrors": true,
    "Watch": true
  },
  {
    "Name": "Prometheus",
    "Command": [
      "bin/tools/prometheus",
      "--config.file=devtools/prometheus/prometheus.yml",
      "--storage.tsdb.path=bin/prom-data/",
      "--web.listen-address=localhost:9090"
    ]
  }
]
